mixin exPlanCard(exPlan = {})
  .store
    .store__hero
      .store__actions
        .store__action.store_action--edit
          a(href=`/exPlan/${exPlan._id}/edit`)
            != h.icon('pencil')
      img(src=`/uploads/${exPlan.photo || 'store.png'}`)
      h2.title
        a(href=`/exPlan/${exPlan.slug}`) #{exPlan.exercise}
    .store__details
      p= exPlan.keyPoints.split(' ').slice(0,25).join(' ')

        
